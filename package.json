{
  "name": "promptmate",
  "displayName": "PromptMate",
  "description": "An extension to help you develop using GPT",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MateusZitelli/PromptMate"
  },
  "categories": [
    "Debuggers",
    "Formatters",
    "Linters",
    "Machine Learning",
    "Testing"
  ],
  "tags": [
    "ai",
    "gpt",
    "prompt",
    "openai"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "publisher": "MateusZitelli",
  "icon": "resources/logo-small.png",
  "contributes": {
    "commands": [
      {
        "command": "promptmate.open",
        "title": "PromptMate: Open"
      },
      {
        "command": "promptmate.addFile",
        "title": "PromptMate: Add current file"
      },
      {
        "command": "promptmate.addFunction",
        "title": "PromptMate: Add current function"
      },
      {
        "command": "promptmate.addSelection",
        "title": "PromptMate: Add current selection"
      },
      {
        "command": "promptmate.runCommand",
        "title": "PromptMate: Run command"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "promptmate.addFile",
          "group": "promptmate"
        },
        {
          "command": "promptmate.addFunction",
          "group": "promptmate"
        },
        {
          "command": "promptmate.addSelection",
          "group": "promptmate"
        }
      ]
    },
    "keybindings": [
      {
        "command": "promptmate.addFile",
        "key": "ctrl+alt+f",
        "mac": "cmd+alt+f",
        "when": "editorTextFocus"
      },
      {
        "command": "promptmate.addFunction",
        "key": "ctrl+alt+u",
        "mac": "cmd+alt+u",
        "when": "editorTextFocus"
      },
      {
        "command": "promptmate.addSelection",
        "key": "ctrl+alt+s",
        "mac": "cmd+alt+s",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "html-loader": "^4.2.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "dotenv": "^16.0.3",
    "micromark": "^3.1.0"
  }
}
